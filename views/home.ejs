<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- fontawsome link -->
    <script src="https://kit.fontawesome.com/66a49a29d4.js" crossorigin="anonymous"></script>
    <!--  -->
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <div id="main_body">
        <h1>TODO APP</h1>

        <form action="/create-todo" method="post">
            <div class="description">
                <label for="description">Description</label>
                <input id="description" type="text" name="description" placeholder="eg: go to gym" required>
            </div>

            <div class="sub_description">

                <div class="description-category">

                    <label for="category">Category</label>
                    <select name="category" id="category">
                        <option value="personal">personal</option>
                        <option value="work">work</option>
                        <option value="school">school</option>
                        <option value="cleaning">cleaning</option>
                        <option value="other">other</option>
                    </select>
                </div>

                <div class="description-date">

                    <label for="date">Due date</label>
                    <input type="date" name="date" id="date">
                </div>
            </div>


            <button type="submit" class="add_btn">
                <i class="fa-solid fa-plus fa-beat"></i>
                Add Task
            </button>

        </form>

        <form action="/delete_task" method="get">

            <button type="submit" class="delete_btn">
                <i class="fa-solid fa-xmark"></i>
                Delete Tasks
            </button>

            <div class="tasks-section">

                <ul>
                    <% for(let i of todo_data){ %>
                        <li>
                            <div class="todo_list" id="<%= i._id %>">

                                <input id="<%= i._id %>" class="checkset" type="checkbox" name="<%= i._id %>">

                                <div class="description_date">

                                    <label for="<%= i._id %> " class="des_mark">
                                        <%= i.description %>
                                    </label>

                                    <label for="<%= i._id %>" class="calender_date">
                                        <i class="fa-regular fa-calendar-days"></i>
                                        &nbsp;&nbsp;
                                        <%= i.date %>
                                    </label>
                                </div>
                                <div class="category">
                                    <%= i.category %>
                                </div>

                            </div>
                        </li>
                        <% } %>
                </ul>
            </div>

        </form>
    </div>


    <script src="/js/home.js"></script>
</body>

</html>